{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-forge",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-forge.cmd"
      },
      "args": ["start"],
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000
    },
    {
      "name": "Electron: All",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-forge",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-forge.cmd"
      },
      "args": ["start", "--", "--remote-debugging-port=9223"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Electron Forge.*started",
        "action": "debugWithChrome"
      }
    }
  ],
  "compounds": [
    {
      "name": "Electron: Main + Renderer",
      "configurations": ["Electron: Main", "Electron: Renderer"],
      "presentation": {
        "hidden": false,
        "group": "electron",
        "order": 1
      },
      "stopAll": true
    }
  ]
}